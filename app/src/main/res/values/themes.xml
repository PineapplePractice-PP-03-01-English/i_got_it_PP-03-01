<resources>

    <style name="Base.Theme.I_got_it" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorPrimaryVariant">@color/fiolet</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_green</item>
        <item name="colorSecondaryVariant">@android:color/holo_red_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- главный цвет фона для приложения -->
        <item name="android:windowBackground">#1E1226</item>
        <!-- Основной цвет текста -->
        <item name="android:textColor">@color/white</item>

        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.I_got_it" parent="Base.Theme.I_got_it.NoActionBar" />

    <style name="Base.Theme.I_got_it.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>