<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="114dp"
    android:outlineSpotShadowColor="@color/white"
    android:layout_marginTop="16dp"
    android:backgroundTint="@color/view_background"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Качаю софт-скиллы" />
        <LinearLayout
            android:id="@+id/cont_skill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:layout_width="53dp"
                android:layout_height="14dp"
                android:text="A1"
                android:textSize="8sp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:textColor="@color/divider"
                android:background="@drawable/bg_text_view_outline"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="53dp"
                android:textColor="@color/divider"
                android:layout_height="14dp"
                android:text="2 занятие"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:textSize="8sp"
                android:background="@drawable/bg_text_view_outline"
                android:layout_weight="1"/>
            <TextView
                android:textColor="@color/divider"
                android:layout_width="53dp"
                android:layout_height="14dp"
                android:gravity="center"
                android:text="2 занятие"
                android:layout_marginEnd="8dp"
                android:textSize="8sp"
                android:background="@drawable/bg_text_view_outline"
                android:layout_weight="1"/>
            <TextView
                android:textColor="@color/divider"
                android:layout_width="53dp"
                android:layout_height="14dp"
                android:gravity="center"
                android:text="2 занятие"
                android:layout_marginEnd="8dp"
                android:textSize="8sp"
                android:background="@drawable/bg_text_view_outline"
                android:layout_weight="1"/>
            <TextView
                android:textColor="@color/divider"
                android:layout_width="53dp"
                android:layout_height="14dp"
                android:gravity="center"
                android:text="2 занятие"
                android:textSize="8sp"
                android:background="@drawable/bg_text_view_outline"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/description_skill"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cont_skill"
            tools:text="Интенсивный разговорный английский для начальных уровней" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>